{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",

  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!.turbo",
      "!coverage",
      "!**/dist",
      "!apps/frontend/.next",
      "!apps/frontend/out"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      }
    }
  },

  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },

  "overrides": [
    {
      "includes": ["apps/frontend/**"],
      "javascript": {
        "formatter": { "quoteStyle": "single", "semicolons": "asNeeded" }
      },
      "linter": {
        "rules": {
          "style": { "useImportType": "warn" }
        }
      }
    },
    {
      "includes": ["apps/backend/**"],
      "javascript": {
        "formatter": { "quoteStyle": "single", "semicolons": "always" }
      },
      "linter": {
        "rules": {
          "suspicious": { "noConsole": "off" },
          "style": { "useImportType": "off" },
          "correctness": {
            "noUnusedVariables": "warn",
            "noUnusedFunctionParameters": "off",
            "noUnusedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/functions/**"],
      "javascript": {
        "formatter": { "quoteStyle": "single", "semicolons": "always" }
      },
      "linter": {
        "rules": {
          "style": { "useImportType": "warn" }
        }
      }
    }
  ]
}
